@model HotelManagementFinal.Models.Room

@{
    ViewBag.Title = "Create";
}

@{
    var RoomTypeList = new List<SelectListItem>(){
        new SelectListItem(){Value="1",Text="Standard"},
        new SelectListItem(){Value="2",Text="Deluxe"},
        new SelectListItem(){Value="3",Text="Supreme"}
    };
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Room</legend>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.RoomType)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.RoomType,RoomTypeList)
            @Html.ValidationMessageFor(model => model.RoomType)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NoOfRooms)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NoOfRooms, new { @type = "number", @min = "0" })
            @Html.ValidationMessageFor(model => model.NoOfRooms)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price, new { @type = "number", @min = "0" })
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
