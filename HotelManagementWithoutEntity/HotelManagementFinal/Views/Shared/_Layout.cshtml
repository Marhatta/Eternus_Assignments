
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Hotel Asia</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("MyHotel", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            @if (Request.IsAuthenticated)
                            {
                                String currentUser = User.Identity.Name;
                                if (currentUser == "vishalmarhatta")
                                {
                                   <li>@Html.ActionLink("View Rooms", "Index", "Default1")</li>
                                   <li>@Html.ActionLink("Create Room", "Create", "Default1")</li>
                                   <li>@Html.ActionLink("Check In", "CheckIn", "Default1")</li>
                                }
                                else
                                {
                                     <li>@Html.ActionLink("View Rooms", "Index", "Default1")</li>
                                }
                            }
                            else
                            {
                                <li>@Html.ActionLink("View Rooms", "Index", "Default1")</li>
                            }
                           
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - MyHotel</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
