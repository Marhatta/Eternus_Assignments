@model HotelManagementFinal.Models.CheckIn




@{
    ViewBag.Title = "CheckIn";
}


@{
    var RoomTypeList = new List<SelectListItem>(){
        new SelectListItem(){Value="1",Text="Standard"},
        new SelectListItem(){Value="2",Text="Deluxe"},
        new SelectListItem(){Value="3",Text="Supreme"}
    };
}


<h2>@Html.ActionLink("View All CheckedIn", "CheckInDetails", "Default1")</h2>
<h2>CheckIn</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Check In</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.RoomId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RoomId, new { @type = "number", @min = "0" })
            @Html.ValidationMessageFor(model => model.RoomId)


        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.GuestName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GuestName, new { @type = "number", @min = "0" })
            @Html.ValidationMessageFor(model => model.GuestName)
        </div>



        <div class="editor-label">
            @Html.LabelFor(model => model.Address)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Address)
            @Html.ValidationMessageFor(model => model.Address)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NoOfDays)
        </div>
         <div class="editor-field">
            @Html.EditorFor(model => model.NoOfDays)
            @Html.ValidationMessageFor(model => model.NoOfDays)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CheckInDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CheckInDate)
            @Html.ValidationMessageFor(model => model.CheckInDate)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.RoomType)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.RoomType, RoomTypeList)
            @Html.ValidationMessageFor(model => model.RoomType)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NoOfRooms)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NoOfRooms, new { @type = "number", @min = "0" })
            @Html.ValidationMessageFor(model => model.NoOfRooms)
        </div>
     
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}